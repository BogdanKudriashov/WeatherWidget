<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".MainActivity"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#02040B"
	android:gravity="top|center">

	<LinearLayout
		android:layout_height="60dp"
		android:layout_width="match_parent"
		android:orientation="horizontal"
		android:layout_marginTop="10dp">

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:layout_weight="1">

			<Button
				android:layout_height="40dp"
				android:layout_width="150dp"
				android:text="My Location"
				android:id="@+id/btn_my_location"
				android:onClick="onClick"
				android:background="#0BCBEE"
				android:textColor="#0A0909"
				android:textSize="12sp"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="20dp"/>

			<LinearLayout
				android:layout_height="match_parent"
				android:layout_width="wrap_content"
				android:orientation="vertical"
				android:layout_marginLeft="15dp">

				<TextView
					android:layout_height="25dp"
					android:layout_width="wrap_content"
					android:gravity="center"
					android:textSize="14sp"
					android:id="@+id/tvLocationGPS"
					android:textColor="#10C6F3"
					android:layout_marginTop="5dp"/>

				<TextView
					android:layout_height="25dp"
					android:layout_width="wrap_content"
					android:gravity="center"
					android:textSize="14sp"
					android:id="@+id/tvLocationNet"
					android:textColor="#10C6F3"/>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
			android:orientation="horizontal">

			<Button
				android:layout_height="40dp"
				android:layout_width="150dp"
				android:text="Change City"
				android:id="@+id/btn_change_city"
				android:onClick="onClick"
				android:background="#0BCBEE"
				android:textColor="#0A0909"
				android:textSize="12sp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="20dp"/>

		</LinearLayout>

	</LinearLayout>

	<TextView
		android:id="@+id/updated_field"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#0BBFEC"
		android:textSize="14sp"/>

	<TextView
		android:id="@+id/city_field"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#34BDF7"
		android:textSize="22sp"/>

	<ImageView
		android:id="@+id/weather_icon"
		android:layout_width="80dp"
		android:layout_height="80dp"/>

	<TextView
		android:id="@+id/current_temperature_field"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#17C3F4"
		android:textSize="22sp"/>

	<TextView
		android:id="@+id/details_field"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="#18D2EE"
		android:textSize="16sp"/>

	<LinearLayout
		android:layout_height="100dp"
		android:layout_width="wrap_content"
		android:orientation="horizontal"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp">

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="80dp"
			android:orientation="vertical"
			android:gravity="center">

			<TextView
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:gravity="center"
				android:id="@+id/tv_time_1"
				android:textColor="#0ECCF5"/>

			<ImageView
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:id="@+id/iv_w_1"/>

			<TextView
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:gravity="center"
				android:id="@+id/tv_temp_1"
				android:textColor="#0CD2F6"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="80dp"
			android:orientation="vertical"
			android:gravity="center">

			<TextView
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:gravity="center"
				android:id="@+id/tv_time_2"
				android:textColor="#08C2F7"/>

			<ImageView
				android:id="@+id/iv_w_2"
				android:layout_width="60dp"
				android:layout_height="60dp"/>

			<TextView
				android:id="@+id/tv_temp_2"
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:gravity="center"
				android:textColor="#11C9F0"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="80dp"
			android:orientation="vertical"
			android:gravity="center">

			<TextView
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:id="@+id/tv_time_3"
				android:gravity="center"
				android:textColor="#11CEF6"/>

			<ImageView
				android:id="@+id/iv_w_3"
				android:layout_width="60dp"
				android:layout_height="60dp"/>

			<TextView
				android:id="@+id/tv_temp_3"
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:gravity="center"
				android:textColor="#12C1F3"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="80dp"
			android:orientation="vertical"
			android:gravity="center">

			<TextView
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:id="@+id/tv_time_4"
				android:gravity="center"
				android:textColor="#16B2F2"/>

			<ImageView
				android:id="@+id/iv_w_4"
				android:layout_width="60dp"
				android:layout_height="60dp"/>

			<TextView
				android:id="@+id/tv_temp_4"
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:gravity="center"
				android:textColor="#13CFF7"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="80dp"
			android:orientation="vertical"
			android:gravity="center">

			<TextView
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:id="@+id/tv_time_5"
				android:gravity="center"
				android:textColor="#12C3F6"/>

			<ImageView
				android:id="@+id/iv_w_5"
				android:layout_width="60dp"
				android:layout_height="60dp"/>

			<TextView
				android:id="@+id/tv_temp_5"
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:gravity="center"
				android:textColor="#12D0F2"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="80dp"
			android:orientation="vertical"
			android:gravity="center">

			<TextView
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:id="@+id/tv_time_6"
				android:gravity="center"
				android:textColor="#12CDF5"/>

			<ImageView
				android:id="@+id/iv_w_6"
				android:layout_width="60dp"
				android:layout_height="60dp"/>

			<TextView
				android:id="@+id/tv_temp_6"
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:gravity="center"
				android:textColor="#0BC6F4"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="80dp"
			android:orientation="vertical"
			android:gravity="center">

			<TextView
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:id="@+id/tv_time_7"
				android:gravity="center"
				android:textColor="#18CFF1"/>

			<ImageView
				android:id="@+id/iv_w_7"
				android:layout_width="60dp"
				android:layout_height="60dp"/>

			<TextView
				android:id="@+id/tv_temp_7"
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:gravity="center"
				android:textColor="#14CBF3"/>

		</LinearLayout>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="80dp"
			android:orientation="vertical"
			android:gravity="center">

			<TextView
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:id="@+id/tv_time_8"
				android:gravity="center"
				android:textColor="#17BFEF"/>

			<ImageView
				android:id="@+id/iv_w_8"
				android:layout_width="60dp"
				android:layout_height="60dp"/>

			<TextView
				android:id="@+id/tv_temp_8"
				android:layout_height="20dp"
				android:layout_width="match_parent"
				android:gravity="center"
				android:textColor="#18CCF3"/>

		</LinearLayout>

	</LinearLayout>

	<TextView
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:id="@+id/json_info"
		android:textColor="#FAFAFA"
		android:textSize="16sp"/>

</LinearLayout>

